<style>
    /* Styles for the lift-on-hover effect on gallery cards */
    .gallery-card {
        /* Add a smooth transition for all property changes */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        /* Ensure the element can take transforms */
        will-change: transform, box-shadow;
    }

    /* The hover state: lift and increase shadow */
    .gallery-card:hover {
        /* Lift the card slightly up */
        transform: translateY(-5px);
        /* Increase the shadow size/intensity */
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); 
    }

    /* Gallery performance optimizations */
    .gallery-card {
        contain: layout style paint;
        background: #f5f5f5;
    }
    
    .gallery-card img {
        background: #f0f0f0;
        min-height: 250px;
    }
    
    /* Preload critical images */
    .gallery-card:nth-child(-n+6) img {
        content-visibility: auto;
    }
</style>

