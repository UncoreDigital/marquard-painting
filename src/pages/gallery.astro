        if (hiddenImages.style.display === 'none' || hiddenImages.style.display === '') {
            hiddenImages.style.display = 'block';
            buttonContainer.style.display = 'none';
            
            // Smooth scroll to the new images
            setTimeout(() => {
                hiddenImages.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'start' 
                });
            }, 300);
        } else {
            hiddenImages.style.display = 'none';
            buttonContainer.style.display = 'block';
            
            // Scroll back up to the load more button
            setTimeout(() => {
                loadMoreBtn.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            }, 300);
        }
    };
});
</script>
