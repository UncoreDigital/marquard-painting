---
interface Props {
  title: string;
  background?: string;
}

// Default background if not passed
const { title, background = "/assets/images/backgrounds/page-header-bg.jpg" } =
  Astro.props;
---

<section class="page-header">
  <div class="page-header-bg" style={`background-image: url(${background})`}>
  </div>
  <div class="container">
    <div class="page-header__inner">
      <ul class="thm-breadcrumb list-unstyled">
        <li><a href="/">Home</a></li>
        <li><span>/</span></li>
        <li>{title}</li>
      </ul>
      <h2>{title}</h2>
    </div>
  </div>
</section>
